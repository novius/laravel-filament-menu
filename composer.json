{
    "name": "novius/laravel-filament-menu",
    "description": "A Filament package to manage menus in your application.",
    "keywords": [
        "laravel",
        "filament",
        "menu"
    ],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Novius Agency",
            "email": "team-developpeurs@novius.com",
            "homepage": "https://www.novius.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "codewithdennis/filament-select-tree": "^4.0",
        "filament/filament": "^4.0 | ^5.0",
        "kalnoy/nestedset": "^6.0.6",
        "laravel/framework": "^11.0 | ^12.0",
        "novius/filament-relation-nested": "^1.0.0",
        "novius/laravel-filament-slug": "^1.0.0",
        "novius/laravel-filament-translatable": "^1.0.0",
        "novius/laravel-json-casted": "^1.2",
        "novius/laravel-linkable": "^2.0.0",
        "spatie/laravel-sluggable": "^3.4.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0 | ^3.0",
        "laravel/pint": "^1.7",
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.7 || ^4.4",
        "pestphp/pest-plugin-laravel": "^3.0 || ^4.0",
        "roave/security-advisories": "dev-latest",
        "symfony/dom-crawler": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "Novius\\LaravelFilamentMenu\\": "src/",
            "Novius\\LaravelFilamentMenu\\Database\\Factories\\": "database/factories",
            "Novius\\LaravelFilamentMenu\\Database\\Seeders\\": "database/seeders"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Novius\\LaravelFilamentMenu\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Novius\\LaravelFilamentMenu\\LaravelFilamentMenuServiceProvider"
            ],
            "aliases": {
                "MenuManager": "Novius\\LaravelFilamentMenu\\Facades\\MenuManager"
            }
        }
    },
    "scripts": {
        "cs-fix": [
            "./vendor/bin/pint -v"
        ],
        "lint": [
            "@composer cs-fix -- --test"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse --memory-limit 1G"
        ],
        "test": [
            "vendor/bin/pest"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
